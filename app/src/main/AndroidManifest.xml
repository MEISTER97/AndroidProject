<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utilities.MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_gg"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_gg"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoodGameProject"
        tools:targetApi="31">
        <activity
            android:name=".Activities.StartSplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.GroupChatActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.CommunityActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
        />
        <activity
            android:name=".Activities.FriendChatActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.FindFriendChatActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.NotificationActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.UserProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.GoodGameProject" />
        <activity
            android:name=".Activities.UserSearchActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.LoginPhoneActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.RegisterPhoneActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AccountSettingActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.Light.NoActionBar" />
        <activity
            android:name=".Activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3.Light.NoActionBar" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true" />
    </application>

</manifest>
